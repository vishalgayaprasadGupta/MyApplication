<!-- res/drawable/border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color -->
    <corners android:radius="10dp" /> <!-- Rounded corners -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
