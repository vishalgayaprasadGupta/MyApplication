<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawerLayoutOrganiser"
    android:fitsSystemWindows="true"
    tools:context=".OrganiserHomePage">

    <include
        layout="@layout/organiser_menu" />
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/oraniser_navigation_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/organiser_drawer_items"
        android:background="#F1F1F1"
        android:fitsSystemWindows="true"
        app:dividerInsetStart="60dp"
        app:itemIconPadding="10dp"
        app:headerLayout="@layout/organiser_drawer_header"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>