<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="5dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/card_background"
    android:clickable="true"
    android:focusable="true"
    android:radius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Event Organiser Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Organiser Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="start"
            android:textColor="@color/teal_700"
            android:layout_marginBottom="8dp" />

        <!-- Organiser College -->
        <TextView
            android:id="@+id/organiserCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Organiser College"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Organiser Email -->
        <TextView
            android:id="@+id/organiserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organiser Email"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"/>

        <!-- Branch & Department with divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/organiserBranch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Branch"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:ellipsize="end"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/organiserDepartment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Department"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:ellipsize="end"/>
        </LinearLayout>


        <!-- Status -->
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginBottom="0dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
