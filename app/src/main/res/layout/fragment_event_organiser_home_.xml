<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:padding="16dp"
    tools:context=".fragements.EventOrganiserHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Organiser Dashboard"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="#00224D"
            android:textStyle="bold" />

        <!-- Header Section displaying Stream and Department -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/header_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/branchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Science/Commerce/Art"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/departmentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" dept"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Manage Events Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ManageEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:backgroundTint="@color/card_background"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manage  Events"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/manageCollegeEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➔"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cancel Event Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CancelEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:backgroundTint="@color/card_background"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel Event"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/cancelEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➔"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Event Registration Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/EventRegistrations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:backgroundTint="@color/card_background"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Registrations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/eventRegistrations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➔"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
