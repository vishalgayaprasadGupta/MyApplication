<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="16dp"
    tools:context=".ManageEvents.UpdateEvent.updateEventDetails.UpdateEventDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Event Type"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#00224D"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/UpdateCollegeEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:backgroundTint="@color/card_background"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update College Events"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/updateCollegeEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➔"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/UpdateIntercollegeEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:backgroundTint="@color/card_background"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Inter-Collage Events"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/updateInterCollegeEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➔"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/UpdateWorkshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Workshops"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/updateWorkshopEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➔"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/UpdateSeminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:backgroundTint="@color/card_background"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Seminars"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/updateSeminarEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➔"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
