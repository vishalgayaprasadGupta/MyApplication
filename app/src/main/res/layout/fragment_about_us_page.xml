<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="12dp"
            android:textColor="@color/teal_700"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to our College Event Management System! Our platform simplifies event registrations, volunteer management, and notifications to create a seamless event experience."
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/black"/>

        <!-- Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Features:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Easy Event Registrations\n• Volunteer Tracking\n• Admin Notifications\n• Digital Receipts for Events \n• Event Report Generation \n• Participant Management"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Campus Connect. All rights reserved"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="60dp"/>

    </LinearLayout>
</ScrollView>
