<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add Workshop Details"
                    android:textColor="#00224D"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    />

                <!-- Workshop Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/workshopTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Workshop Title"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Workshop Description Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/workshopDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Workshop Description"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Workshop Date Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/workshopDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Workshop Date"
                        android:inputType="date"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:id="@+id/startTimeSpinner"
                        android:layout_width="match_parent"
                        android:background="#D3D3D3"
                        android:layout_height="48dp"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:id="@+id/endTimeSpinner"
                        android:layout_width="match_parent"
                        android:background="#D3D3D3"
                        android:layout_height="48dp"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:id="@+id/eventTypeSpinner"
                        android:layout_width="match_parent"
                        android:background="#D3D3D3"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Venue Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/workshopVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Workshop Venue"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Max Participants Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/maxParticipants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Max Entry"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Registration Fee Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/registrationFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Registration Fee (In Rupees)"
                        android:textColor="@android:color/black"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Special Requirements Input (Multi-line) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/specialRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:hint="Special Requirements (if any)"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbars="vertical"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Add Event Button -->
                    <Button
                        android:id="@+id/addEventButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/teal_700"
                        android:text="Add Workshop Details"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                    <ProgressBar
                        android:id="@+id/workshopProgressbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>

                <!-- Back to Dashboard -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back to Dashboard"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
